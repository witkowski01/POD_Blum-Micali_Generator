        <Button Content="Ręczne wprowadzanie" HorizontalAlignment="Left" Margin="193,195,0,0" VerticalAlignment="Top" Width="183" Click="Button_Click" Background="#FF22CF88" Height="45" FontFamily="Times New Roman" FontSize="18" FontWeight="Bold"/>
        <Button Content="Automatyczne" HorizontalAlignment="Left" Margin="10,195,0,0" VerticalAlignment="Top" Width="171" Click="Automatycznie" Background="#FF22CF88" Height="45" FontFamily="Times New Roman" FontSize="18" FontWeight="Bold"/>
